{
  "name": "@flyerhq/react-native-chat-ui",
  "version": "0.1.0",
  "description": "Flyer Chat UI",
  "homepage": "https://github.com/flyerhq/react-native-chat-ui#readme",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Oleksandr Demchenko <alexdemchenko@yahoo.com>",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "scripts": {
    "compile": "rm -rf lib && tsc -p . && copyup src/assets/*.png lib",
    "lint": "eslint .",
    "prepare": "yarn compile",
    "test": "jest",
    "type-coverage": "type-coverage --is 100 --strict --ignore-catch --cache"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/runtime": "^7.9.6",
    "@react-native-community/eslint-config": "^1.1.0",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^25.2.3",
    "@types/react-native": "^0.62.10",
    "@types/react-test-renderer": "^16.9.2",
    "babel-jest": "^26.0.1",
    "copyfiles": "^2.2.0",
    "eslint": "^7.0.0",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "jest": "^26.0.1",
    "metro-react-native-babel-preset": "^0.59.0",
    "react": "^16.13.1",
    "react-native": "^0.62.2",
    "react-native-safe-area-context": "^1.0.2",
    "react-native-testing-library": "^1.14.0",
    "react-test-renderer": "^16.13.1",
    "type-coverage": "^2.6.1",
    "typescript": "^3.9.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-safe-area-context": "*"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/index.{ts,tsx}",
      "!**/styles.{ts,tsx}",
      "!**/types.{ts,tsx}",
      "!**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "preset": "react-native",
    "setupFiles": [
      "./jest/setup.ts"
    ]
  },
  "typeCoverage": {
    "is": 100
  }
}
